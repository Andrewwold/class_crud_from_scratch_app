<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Subject</th>
      <th>Body</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |work| %>
      <tr>
        <td><%= work.title %></td>
        <td><%= work.author %></td>
        <td><%= work.subject %></td>
        <td><%= work.body %></td>
        <td><%= work.image %></td>
        <td><%= link_to 'Show', work %></td>
        <td><%= link_to 'Edit', edit_blog_path(work) %></td>
        <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
